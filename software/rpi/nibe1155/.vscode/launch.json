    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch on notebook",
            "program": "${workspaceRoot}/server/src/main.ts",
            "cwd": "${workspaceRoot}/server/dist",
            "console": "integratedTerminal",
            "outFiles": [ "${workspaceRoot}/server/dist/*.js" ],
            //"trace": "all",
            "sourceMaps": true,
            "preLaunchTask": "build",
            "smartStep": true,
            "outputCapture": "console"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Launch on RPI",
            //// "cwd": "${workspaceRoot}/dist",
            ////"trace": "all",
            // "outFiles": [ "${workspaceRoot}/dist/*.js" ],
            "sourceMaps": true,
            "preLaunchTask": "buildAndLaunchOnRemote",
            "smartStep": true,
            "stopOnEntry": false,
            "port": 9229,
            "address": "rpi",
            "restart": false,
            "localRoot": "${workspaceRoot}/server",
            "remoteRoot": "/home/pi/nibe1155/server",
            "internalConsoleOptions": "openOnSessionStart",
            "trace": false
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach on RPI",
            //// "cwd": "${workspaceRoot}/dist",
            ////"trace": "all",
            // "outFiles": [ "${workspaceRoot}/dist/*.js" ],
            "sourceMaps": true,
            "smartStep": true,
            "stopOnEntry": false,
            "port": 9229,
            "address": "rpi",
            "restart": false,
            "localRoot": "${workspaceRoot}/server",
            "remoteRoot": "/home/pi/nibe1155/server",
            "internalConsoleOptions": "openOnSessionStart",
            "trace": false
        }
    ]

    
    
