{
    "startmode": {
        "disabled": true,
        "mode": "off",
        "frequency": 25
    },
    "modbus-serial": {
        "device": "/dev/ttyUSB0",
        "options": {
            "baudRate": 115200
        }
    },
    "server": {
        "start": true,
        "port": 8080,
        "morgan": {
            "disabled": true,
            "config": "tiny"
         },
         "pin": "1234"
    },
	"udpServer": {
		"disabled": false,
		"port": 5996,
		"clients": [{
			"id": "home-control-server",
			"host": "localhost",
			"host-nibe1155": "192.168.1.202",
			"port": 2997
		}]
	},
    "auth": {
        "privatekey": "../keys/server-key.pem",
        "publickey": "../keys/server-pubkey.pem",
        "authorizationUri": "/auth",
        "accessTokenTimeout": "5m",
        "remoteTokenTimeout": "23:59:59",
        "remoteTokenMinimumSeconds": 60
    },
    "database-users": {
        "users": [{
            "userid": "test",
            "password": "geheim"
        }]
    },
    "statistics": {
	"disabled": false,
	"timeslotSeconds": 60,
	"tmpFile": "/var/log/fronius/.tmpnibe1155",
        "dbtyp": "csvfile",
	    "csvfile": {
            "filename": "/var/log/fronius/nibe1155-data_%Y-%M-%D.csv"
        }
    },
    "debug": {
        "depth": 3,
        "colors" : true,
        "wtimediff": 6,
        "time": "ddd, yyyy-mm-dd HH:MM:ss.l",
        "wmodule": 16,
        "wlevel": 6,
        "location": "-*",
        "enabled": "*::WARN, *::INFO, *::FINE"
    }

}
